<%- layout('layouts/boilerplate') %>

<div class="container mt-5">
  <div class="row mb-4 align-items-center">
    <div class="col-md-8">
      <h1 class="display-4 fw-bold">All Projects</h1>

      <div class="mb-3 d-flex flex-wrap gap-2">
        <span class="badge rounded-pill bg-primary px-3 py-2 shadow-sm">
          <i class="fa-solid fa-folder-open me-1"></i> 
          Total Projects: <%= totalProjects %>
        </span>
        
        <span class="badge rounded-pill bg-dark px-3 py-2 shadow-sm">
          <i class="fa-solid fa-layer-group me-1"></i> 
          Page <%= currentPage %> of <%= totalPages %>
        </span>

        <% if (totalProjects > 0) { %>
          <span class="badge rounded-pill bg-light text-dark border px-3 py-2 shadow-sm">
            <i class="fa-solid fa-list-ol me-1"></i> 
            Showing <%= projects.length %> results
          </span>
        <% } %>
      </div>

  <div class="alert alert-light border-start border-4 border-info shadow-sm d-flex align-items-start py-3" role="alert">
    <div class="text-info me-3 mt-1">
      <i class="fa-solid fa-clock-rotate-left fs-4"></i>
    </div>
    <div>
      <h6 class="alert-heading fw-bold mb-1 text-warning">Data Retention Policy</h6>
      <p class="mb-0 text-muted small">
        This is a <strong>temporary test environment</strong>. Records are automatically purged 
        <span class="badge bg-info-subtle text-info border border-info-subtle">24h after creation</span> 
        via TTL index. The administrator may remove inappropriate content without notice.
      </p>
    </div>
  </div>
    </div>
    <div class="col-md-4 text-md-end">
      <a href="<%= basePath %>/projects/new" class="btn btn-success btn-lg shadow-sm">
        <i class="fa-solid fa-plus"></i> 
        <span class="d-none d-md-inline">Create New Project</span>
      </a>
    </div>
  </div>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% for( let project of projects ) { %>
      <div class="col">
        <div class="card h-100 border-0 shadow-sm hover-shadow">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title fw-bold text-primary"><%= project.title %></h5>
            <p class="card-text text-muted grow">
              <%= project.description.substring(0, 100) %><%= project.description.length > 100 ? '...' : '' %>
            </p>
            <div class="mt-3">
              <a href="<%= basePath %>/projects/<%= project._id %>" class="btn btn-outline-primary w-100">
                View Details <i class="fa-solid fa-arrow-right ms-1"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  </div>
  <% if (totalProjects > 6) { %>
    <nav aria-label="Project pagination" class="mt-5">
      <ul class="pagination justify-content-center">
        
        <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
          <a class="page-link shadow-sm" href="<%= basePath %>/projects?page=<%= currentPage - 1 %>" tabindex="-1">
            <i class="fa-solid fa-chevron-left"></i>
          </a>
        </li>
        
        <% for(let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= currentPage === i ? 'active shadow-sm' : '' %>">
            <a class="page-link" href="<%= basePath %>/projects?page=<%= i %>"><%= i %></a>
          </li>
          <% } %>
          
          <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
            <a class="page-link shadow-sm" href="<%= basePath %>/projects?page=<%= currentPage + 1 %>">
              <i class="fa-solid fa-chevron-right"></i>
            </a>
          </li>
          
        </ul>
      </nav>
      <% } %>
</div>
